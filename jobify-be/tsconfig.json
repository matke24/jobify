{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES6",
    "moduleResolution": "node",
    "paths": {
      "*": ["node_modules/*", "src/typings/*"]
    },
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "typeRoots": ["./typings", "./node_modules/@types"]
}
